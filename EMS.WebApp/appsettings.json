{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost\\SQLEXPRESS;Initial Catalog=PSPDEMS;integrated security=True;TrustServerCertificate=True;MultipleActiveResultSets=true;"
  },
  "AuditSettings": {
    "EnableAuditLog": true,
    "LogViewActions": false,
    "LogFailedActions": true,
    "MaxAuditRetentionDays": 365,
    "EnableIPAddressLogging": true,
    "EnableUserAgentLogging": true,
    "SensitiveFields": [ "password", "token", "secret", "key" ],
    "ExcludedTables": [ "sys_audit_log", "AspNetUserTokens" ],
    "ExcludedControllers": [ "Health", "Diagnostics" ]
  },
  "ExpiredMedicineBackgroundService": {
    "Enabled": true,
    "SyncIntervalHours": 6,
    "RetryDelayMinutes": 30,
    "NotifyOnNewExpired": true,
    "NotificationEmails": [
      "admin@yourcompany.com",
      "admin@yourcompany.com"
    ]
  },
  "EncryptionSettings": {
    "Key": "YourSecureEncryptionKey2024!@#$%"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "SecuritySettings": {
    "MaxRequestSize": 20971520,
    "SessionTimeout": 20,
    "RateLimiting": {
      "RequestsPerWindow": 100,
      "WindowSizeInSeconds": 9,
      "MaxConcurrentRequests": 85
    }
  },
  "SessionTimeout": {
    "TimeoutMinutes": 10,
    "WarningMinutes": 5,
    "CheckIntervalSeconds": 100
  },
  "Kestrel": {
    "AddServerHeader": false
  },
  "Antiforgery": {
    "Development": {
      "SecurePolicy": "None",
      "SameSite": "Lax"
    },
    "Production": {
      "SecurePolicy": "Always",
      "SameSite": "Strict"
    }
  }
}

