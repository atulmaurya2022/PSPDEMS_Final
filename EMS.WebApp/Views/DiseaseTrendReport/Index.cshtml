@{
    ViewData["Title"] = "Disease Trend Analysis Reports";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/css/report.css" rel="stylesheet" />
<link href="~/css/report-inventory.css" rel="stylesheet" />

<!-- Enhanced Dashboard Header -->
<div class="dashboard-header">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb breadcrumb-custom">
            <li class="breadcrumb-item">Reports</li>
            <li class="breadcrumb-item active" aria-current="page">Disease Trend Analysis</li>
        </ol>
    </nav>
    <h1 class="dashboard-title">
        <i class="bi bi-graph-up-arrow"></i>
        Disease Trend Analysis Reports
    </h1>
    <p class="dashboard-subtitle">Comprehensive disease trend analysis and medicine consumption reports</p>
</div>

<div class="container-fluid">
    <div class="row g-4 mt-3">
        <!-- Age Wise Report Card -->
        <div class="col-md-6 col-lg-3">
            <div class="card report-card h-100">
                <div class="card-body text-center">
                    <div class="report-icon age-wise">
                        <i class="bi bi-calendar-check"></i>
                    </div>
                    <h5 class="card-title mt-3">Age Wise Analysis</h5>
                    <p class="card-text text-muted">
                        Disease trends grouped by employee age ranges 
                    </p>
                    <a asp-action="DiseaseTrendAgeWise" class="btn btn-primary btn-enhanced">
                        <i class="bi bi-arrow-right-circle me-2"></i>View Report
                    </a>
                </div>
            </div>
        </div>

        <!-- Department Wise Report Card -->
        <div class="col-md-6 col-lg-3">
            <div class="card report-card h-100">
                <div class="card-body text-center">
                    <div class="report-icon dept-wise">
                        <i class="bi bi-building"></i>
                    </div>
                    <h5 class="card-title mt-3">Department Wise Analysis</h5>
                    <p class="card-text text-muted">
                        Disease trends grouped by organizational departments
                    </p>
                    <a asp-action="DiseaseTrendDeptWise" class="btn btn-success btn-enhanced">
                        <i class="bi bi-arrow-right-circle me-2"></i>View Report
                    </a>
                </div>
            </div>
        </div>

        <!-- Patient Wise Report Card -->
        <div class="col-md-6 col-lg-3">
            <div class="card report-card h-100">
                <div class="card-body text-center">
                    <div class="report-icon patient-wise">
                        <i class="bi bi-person-lines-fill"></i>
                    </div>
                    <h5 class="card-title mt-3">Patient Wise Analysis</h5>
                    <p class="card-text text-muted">
                        Detailed patient visit records with disease and medicine information
                    </p>
                    <a asp-action="DiseaseTrendPatientWise" class="btn btn-warning btn-enhanced">
                        <i class="bi bi-arrow-right-circle me-2"></i>View Report
                    </a>
                </div>
            </div>
        </div>

        <!-- Medicine Wise Report Card -->
        <div class="col-md-6 col-lg-3">
            <div class="card report-card h-100">
                <div class="card-body text-center">
                    <div class="report-icon medicine-wise">
                        <i class="bi bi-capsule-pill"></i>
                    </div>
                    <h5 class="card-title mt-3">Medicines Consumption</h5>
                    <p class="card-text text-muted">
                        Medicine consumption analysis with quantity tracking
                    </p>
                    <a asp-action="DiseaseTrendMedicineWise" class="btn btn-info btn-enhanced">
                        <i class="bi bi-arrow-right-circle me-2"></i>View Report
                    </a>
                </div>
            </div>
        </div>
    </div>

