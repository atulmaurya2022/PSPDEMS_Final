@model EMS.WebApp.Data.MedMaster

@if (ViewBag.Error != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <div class="d-flex align-items-start">
            <i class="bi bi-exclamation-triangle me-3 flex-shrink-0" style="font-size: 18px;"></i>
            <div class="flex-grow-1">
                <strong class="d-block mb-1">Warning</strong>
                @ViewBag.Error
            </div>
            <button type="button" class="btn-close ms-3" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
}

<form asp-action="@(Model.MedItemId == 0 ? "Create" : "Edit")" method="post" id="medMasterForm">
    @Html.AntiForgeryToken()

    <input asp-for="MedItemId" type="hidden" />
    <input asp-for="CreatedBy" type="hidden" />
    <input asp-for="CreatedOn" type="hidden" />

    <!-- Display general validation message -->
    <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show" role="alert" style="display: none;">
        <div class="d-flex align-items-start">
            <i class="bi bi-x-circle me-3 flex-shrink-0" style="font-size: 18px;"></i>
            <div class="flex-grow-1">
                <strong class="d-block mb-1">Validation Error</strong>
                Please correct the errors below and try again.
            </div>
            <button type="button" class="btn-close ms-3" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>

    <!-- Medicine Information Section -->
    <div class="row mb-4">
        <div class="col-md-6">
            <label asp-for="MedItemName" class="form-label form-label-master">
                @Html.DisplayNameFor(m => m.MedItemName)
                <span class="text-danger">*</span>
            </label>
            <input asp-for="MedItemName" class="form-control form-control-master" id="medItemNameInput" maxlength="120" placeholder="Enter medicine name (e.g., Paracetamol 500mg)" />
            <div class="char-counter-container">
                <span asp-validation-for="MedItemName" class="field-validation-error" id="medItemNameValidation"></span>
                <small class="char-counter" id="medItemNameCharCount">0/120</small>
            </div>
        </div>

        <div class="col-md-6">
            <label asp-for="BaseId" class="form-label form-label-master">
                @Html.DisplayNameFor(m => m.BaseId)
               @*  <span class="text-danger">*</span> *@
            </label>
            <select asp-for="BaseId" class="form-control form-control-master" asp-items="ViewBag.MedBaseList" id="baseIdInput">
                <option selected disabled value="">-- Select Medicine Base --</option>
            </select>
            <span asp-validation-for="BaseId" class="field-validation-error" id="baseIdValidation"></span>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <label asp-for="CompanyName" class="form-label form-label-master">
                @Html.DisplayNameFor(m => m.CompanyName)
            </label>
            <input asp-for="CompanyName" class="form-control form-control-master" id="companyNameInput" maxlength="120" placeholder="Enter company name (optional)" />
            <div class="char-counter-container">
                <span asp-validation-for="CompanyName" class="field-validation-error" id="companyNameValidation"></span>
                <small class="char-counter" id="companyNameCharCount">0/120</small>
            </div>
        </div>

        <div class="col-md-6">
            <label asp-for="ReorderLimit" class="form-label form-label-master">
                @Html.DisplayNameFor(m => m.ReorderLimit)
                <span class="text-danger">*</span>
            </label>
            <input asp-for="ReorderLimit" class="form-control form-control-master" id="reorderLimitInput" type="number" min="0" max="999999" placeholder="Enter reorder limit" />
            <div class="char-counter-container">
                <span asp-validation-for="ReorderLimit" class="field-validation-error" id="reorderLimitValidation"></span>
                <small class="form-text text-info">
                    <i class="bi bi-info-circle"></i>
                    Range: 0 - 999,999
                </small>
            </div>
        </div>
    </div>

    <!-- Combination Validation Alert -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="alert alert-info alert-dismissible fade show d-none" id="combinationAlert" role="alert">
                <div class="d-flex align-items-start">
                    <i class="bi bi-info-circle me-3 flex-shrink-0" style="font-size: 18px;"></i>
                    <div class="flex-grow-1">
                        <strong class="d-block mb-1">Combination Validation</strong>
                        Medicine Name + Base + Company must be unique.
                    </div>
                    <button type="button" class="btn-close ms-3" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    </div>

    @if (Model.MedItemId > 0 && (Model.CreatedOn.HasValue || Model.ModifiedOn.HasValue))
    {
        <div class="audit-section">
            <h6>
                <i class="bi bi-clock-history"></i>
                Audit Information
            </h6>

            @if (Model.CreatedOn.HasValue)
            {
                <div class="audit-row">
                    <div class="audit-field">
                        <label>Created By</label>
                        <input class="form-control" value="@(Model.CreatedBy ?? "N/A")" readonly />
                    </div>
                    <div class="audit-field">
                        <label>Created On</label>
                        <input class="form-control" value="@(Model.CreatedOn?.ToString("dd-MMM-yyyy hh:mm:ss tt") ?? "N/A")" readonly />
                    </div>
                </div>
            }

            @if (Model.ModifiedOn.HasValue)
            {
                <div class="audit-row">
                    <div class="audit-field">
                        <label>Modified By</label>
                        <input class="form-control" value="@(Model.ModifiedBy ?? "N/A")" readonly />
                    </div>
                    <div class="audit-field">
                        <label>Modified On</label>
                        <input class="form-control" value="@(Model.ModifiedOn?.ToString("dd-MMM-yyyy hh:mm:ss tt") ?? "N/A")" readonly />
                    </div>
                </div>
            }
        </div>
    }

    <div class="modal-footer modal-footer-master">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
            Cancel
        </button>
        <button type="submit" class="btn btn-primary" id="submitBtn">
            @(Model.MedItemId == 0 ? "Save Medicine" : "Update Medicine")
        </button>
    </div>
</form>

