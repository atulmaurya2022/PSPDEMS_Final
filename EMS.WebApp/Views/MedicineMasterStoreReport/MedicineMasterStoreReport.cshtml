@{
    ViewData["Title"] = "Medicine Master Store Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/css/report.css" rel="stylesheet" />
<link href="~/css/report-inventory.css" rel="stylesheet" />

<!-- Enhanced Dashboard Header -->
<div class="dashboard-header">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb breadcrumb-custom">
            <li class="breadcrumb-item">Reports</li>
            <li class="breadcrumb-item active" aria-current="page">Medicine Master Store Report</li>
        </ol>
    </nav>
    <h1 class="dashboard-title">
        <i class="bi bi-shop"></i>
        Medicine Master Store Report
    </h1>
    <p class="dashboard-subtitle">Comprehensive store-level medicine catalog with detailed stock analysis, availability tracking, and reorder management</p>
</div>

<div class="container-fluid">
    <!-- Enhanced Control Section (Master Store Report - No Date Filters) -->
    <div class="report-controls-section">
        <div class="controls-row">
            <div class="control-group">
                <label class="control-label">
                    <i class="bi bi-shop me-2"></i>
                    Report Type
                </label>
                <div class="filter-controls">
                    <span class="badge bg-success">Medicine Master Store</span>
                    <small class="text-muted ms-2">Store-level inventory analysis</small>
                </div>
            </div>

            <div class="control-actions">
                <button type="button" class="btn btn-primary btn-enhanced" onclick="loadReport()">
                    <i class="bi bi-arrow-clockwise"></i>
                    Refresh Data
                </button>
                <div class="action-buttons" id="actionButtons" style="display: none;">
                    <button type="button" class="btn btn-secondary btn-enhanced" onclick="exportReport()">
                        <i class="bi bi-download"></i>
                        Export
                    </button>
                    <button type="button" class="btn btn-outline-secondary btn-enhanced" onclick="printReport()">
                        <i class="bi bi-printer"></i>
                        Print
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Enhanced Report Summary Cards (6 cards for Store Master) -->
    <div id="reportSummary" class="inventory-summary-grid" style="display: none;">
        <div class="summary-card" data-category="total-records">
            <div class="summary-card-body">
                <div class="summary-header">
                    <h6 class="summary-title">Total Medicines</h6>
                    <div class="summary-icon">
                        <i class="bi bi-capsule"></i>
                    </div>
                </div>
                <div class="summary-value" id="totalRecords">0</div>
                <div class="summary-subtitle">Medicine entries</div>
            </div>
        </div>

        <div class="summary-card" data-category="total-batches">
            <div class="summary-card-body">
                <div class="summary-header">
                    <h6 class="summary-title">Total Store Qty</h6>
                    <div class="summary-icon">
                        <i class="bi bi-building"></i>
                    </div>
                </div>
                <div class="summary-value" id="totalQtyInStore">0</div>
                <div class="summary-subtitle">Units in store</div>
            </div>
        </div>

        <div class="summary-card" data-category="available-stock">
            <div class="summary-card-body">
                <div class="summary-header">
                    <h6 class="summary-title">Available Qty</h6>
                    <div class="summary-icon">
                        <i class="bi bi-check-circle"></i>
                    </div>
                </div>
                <div class="summary-value" id="totalAvailableQty">0</div>
                <div class="summary-subtitle">Available units</div>
            </div>
        </div>

        <div class="summary-card" data-category="out-of-stock">
            <div class="summary-card-body">
                <div class="summary-header">
                    <h6 class="summary-title">Total Expired</h6>
                    <div class="summary-icon">
                        <i class="bi bi-exclamation-triangle"></i>
                    </div>
                </div>
                <div class="summary-value" id="totalExpiredQty">0</div>
                <div class="summary-subtitle">Expired units</div>
            </div>
        </div>

        <div class="summary-card" data-category="low-stock">
            <div class="summary-card-body">
                <div class="summary-header">
                    <h6 class="summary-title">Need Reorder</h6>
                    <div class="summary-icon">
                        <i class="bi bi-cart-plus"></i>
                    </div>
                </div>
                <div class="summary-value" id="medicinesNeedingReorder">0</div>
                <div class="summary-subtitle">Require reorder</div>
            </div>
        </div>

        <div class="summary-card" data-category="consumed-stock">
            <div class="summary-card-body">
                <div class="summary-header">
                    <h6 class="summary-title">Out of Stock</h6>
                    <div class="summary-icon">
                        <i class="bi bi-x-circle"></i>
                    </div>
                </div>
                <div class="summary-value" id="medicinesOutOfStock">0</div>
                <div class="summary-subtitle">No stock available</div>
            </div>
        </div>
    </div>

    <!-- Enhanced Plant Information -->
    <div id="plantInfo" class="plant-info-section" style="display: none;">
        <div class="plant-info-content">
            <div class="plant-info-header">
                <i class="bi bi-building me-2"></i>
                <h6 class="plant-info-title">Plant Information</h6>
            </div>
            <div class="plant-info-details">
                <div class="plant-detail-item">
                    <span class="plant-detail-label">Plant Code:</span>
                    <span class="plant-detail-value" id="currentPlantCode">-</span>
                </div>
                <div class="plant-detail-separator"></div>
                <div class="plant-detail-item">
                    <span class="plant-detail-label">Plant Name:</span>
                    <span class="plant-detail-value" id="currentPlantName">-</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Enhanced Report Header -->
    <div id="reportHeader" class="report-header-section" style="display: none;">
        <div class="report-header-content">
            <div class="company-info">
                <h4 id="unitHeader">Unit: ITC LIMITED - PSPD-N/A</h4>
                <div class="report-meta">
                    <span class="meta-item">
                        <i class="bi bi-clock me-1"></i>
                        Generated: <span id="runDateTime"></span>
                    </span>
                    <span class="meta-item">
                        <i class="bi bi-person me-1"></i>
                        By: <span id="generatedBy"></span>
                    </span>
                </div>
            </div>
            <div class="report-title">
                <h3>MEDICINE MASTER STORE REPORT</h3>
                <p class="report-subtitle">Store-Level Analysis</p>
            </div>
        </div>
    </div>

    <!-- Enhanced Search Section -->
    <div id="searchSection" class="search-controls-section" style="display: none;">
        <div class="search-wrapper">
            <div class="search-input-group">
                <i class="bi bi-search search-icon"></i>
                <input type="text" class="form-control search-input-enhanced" id="searchInput"
                       placeholder="Search by medicine name...">
                <button type="button" class="btn btn-clear" onclick="clearSearch()">
                    <i class="bi bi-x"></i>
                </button>
            </div>
            <div class="search-results-info">
                <small class="text-muted" id="searchResultCount">No search applied</small>
            </div>
        </div>
    </div>

    <!-- Enhanced Filter Section (Modified to include Show All filter) -->
    <div id="filterSection" class="plant-info-section" style="display: none;">
        <div class="plant-info-content">
            <div class="plant-info-header">
                <i class="bi bi-funnel me-2"></i>
                <h6 class="plant-info-title">Stock Status Filters</h6>
            </div>
            <div class="plant-info-details">
                <!-- NEW: Show All Filter -->
                <div class="plant-detail-item">
                    <div class="custom-checkbox-enhanced" style="min-width: auto;">
                        <input class="form-check-input-enhanced" type="checkbox" id="showAllMedicines">
                        <label class="form-check-label-enhanced" for="showAllMedicines">
                            <i class="bi bi-list me-1"></i>
                            Show All
                        </label>
                    </div>
                </div>
                <div class="plant-detail-separator"></div>
                <!-- Existing Filters -->
                <div class="plant-detail-item">
                    <div class="custom-checkbox-enhanced" style="min-width: auto;">
                        <input class="form-check-input-enhanced" type="checkbox" id="showOutOfStockOnly">
                        <label class="form-check-label-enhanced" for="showOutOfStockOnly">
                            <i class="bi bi-x-circle me-1"></i>
                            Out of Stock Only
                        </label>
                    </div>
                </div>
                <div class="plant-detail-separator"></div>
                <div class="plant-detail-item">
                    <div class="custom-checkbox-enhanced" style="min-width: auto;">
                        <input class="form-check-input-enhanced" type="checkbox" id="showReorderNeeded">
                        <label class="form-check-label-enhanced" for="showReorderNeeded">
                            <i class="bi bi-cart-plus me-1"></i>
                            Reorder Needed
                        </label>
                    </div>
                </div>
                <div class="plant-detail-separator"></div>
                <div class="plant-detail-item">
                    <div class="custom-checkbox-enhanced" style="min-width: auto;">
                        <input class="form-check-input-enhanced" type="checkbox" id="showExpiredStock">
                        <label class="form-check-label-enhanced" for="showExpiredStock">
                            <i class="bi bi-calendar-x me-1"></i>
                            With Expired Stock
                        </label>
                    </div>
                </div>
                <div class="plant-detail-separator"></div>
                <div class="plant-detail-item">
                    <button type="button" class="btn btn-outline-secondary btn-sm" onclick="clearAllFilters()">
                        <i class="bi bi-eraser"></i>
                        Clear Filters
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Enhanced Report Table -->
    <div id="reportTableSection" class="inventory-table-section" style="display: none;">
        <div class="table-container">
            <div class="table-responsive">
                <table class="table table-striped table-glass glass-table table-sm" id="reportTable">
                    <thead>
                        <tr>
                            <th class="col-sl">SL NO</th>
                            <th class="col-medicine-name">MEDICINE NAME</th>
                            <th class="col-available">TOTAL QTY IN STORE</th>
                            <th class="col-out-of-stock text-center">EXPIRED QTY</th>
                            <th class="col-consumed">REORDER LIMIT</th>
                            <th class="col-received-qty">AVAILABLE QTY</th>
                            <th class="col-status">STOCK STATUS</th>
                        </tr>
                    </thead>
                    <tbody id="reportData">
                        <!-- Data will be populated here -->
                    </tbody>
                    <tfoot>
                        <tr class="inventory-table-footer">
                            <th colspan="2" class="text-end">Totals:</th>
                            <th id="footerTotalStoreQty" class="total-value">0</th>
                            <th id="footerTotalExpired" class="total-value">0</th>
                            <th class="text-center">-</th>
                            <th id="footerTotalAvailable" class="total-value">0</th>
                            <th class="text-center">-</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>

    <!-- Enhanced No Data State -->
    <div id="noDataMessage" class="empty-state-section" style="display: none;">
        <div class="empty-state">
            <div class="empty-state-icon">
                <i class="bi bi-shop"></i>
            </div>
            <h6 class="empty-state-title">No Store Data Found</h6>
            <p class="empty-state-description">
                No medicine data found in the store system.<br>
                This could mean the store inventory is empty or needs to be refreshed.
            </p>
            <button type="button" class="btn btn-outline-primary btn-enhanced" onclick="loadReport()">
                <i class="bi bi-arrow-clockwise"></i>
                Refresh Data
            </button>
        </div>
    </div>

    <!-- Enhanced Loading State -->
    <div id="loadingSpinner" class="loading-state-section" style="display: none;">
        <div class="loading-content">
            <div class="loading-spinner-inventory"></div>
            <h6 class="loading-title">Loading Store Master</h6>
            <p class="loading-description">Fetching store-level medicine data...</p>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var allReportData = []; // Store all data for filtering
        var currentFilteredData = []; // Store currently filtered data

        $(document).ready(function() {
            // Load report on page initialization
            loadReport();

            // Filter event handlers - MODIFIED to include the new showAllMedicines filter
            $('#showOutOfStockOnly, #showReorderNeeded, #showExpiredStock, #showAllMedicines').change(function() {
                applyFilters();
                updateFilterFeedback();
            });

            // Search input event with debounce
            $('#searchInput').on('input', debounce(function() {
                applyFilters();
            }, 300));
        });

        // Debounce function for search input
        function debounce(func, wait) {
            let timeout;
            return function executedFunction(...args) {
                const later = () => {
                    clearTimeout(timeout);
                    func(...args);
                };
                clearTimeout(timeout);
                timeout = setTimeout(later, wait);
            };
        }

        function loadReport() {
            // Show loading state
            $('#loadingSpinner').show();
            $('#reportTableSection').hide();
            $('#reportHeader').hide();
            $('#reportSummary').hide();
            $('#plantInfo').hide();
            $('#filterSection').hide();
            $('#noDataMessage').hide();
            $('#searchSection').hide();
            $('#actionButtons').hide();

            $.ajax({
                url: '@Url.Action("GetReport", "MedicineMasterStoreReport")',
                type: 'GET',
                success: function(response) {
                    $('#loadingSpinner').hide();

                    if (response.success && response.data && response.data.length > 0) {
                        allReportData = response.data;
                        // MODIFIED: Apply default filter to show only items with totalQtyInStore > 0
                        currentFilteredData = [...allReportData]; // Copy all data initially

                        applyFilters();
                        updateReportHeader(response.reportInfo);
                        updateSummaryCards(response.reportInfo);
                        updatePlantInfo(response.reportInfo);

                        // Show all sections with animation
                        $('#reportSummary').fadeIn(300);
                        setTimeout(() => $('#plantInfo').fadeIn(300), 100);
                        setTimeout(() => $('#reportHeader').fadeIn(300), 200);
                        setTimeout(() => $('#searchSection').fadeIn(300), 300);
                        setTimeout(() => $('#filterSection').fadeIn(300), 350);
                        setTimeout(() => $('#reportTableSection').fadeIn(300), 400);
                        setTimeout(() => $('#actionButtons').fadeIn(300), 500);

                        showAlert('success', `Store master loaded with ${response.data.length} medicines`, 'Report Ready');
                    } else {
                        $('#noDataMessage').fadeIn(300);
                        showAlert('info', 'No store data found in the system', 'No Results');
                    }
                },
                error: function(xhr, status, error) {
                    $('#loadingSpinner').hide();
                    $('#noDataMessage').show();
                    showAlert('danger', 'Error loading store master: ' + error, 'Load Error');
                }
            });
        }

        // MODIFIED: Updated filtering logic to handle the new "Show All" filter and default behavior
        function applyFilters() {
            var searchText = $('#searchInput').val().toLowerCase().trim();
            var showOutOfStockOnly = $('#showOutOfStockOnly').is(':checked');
            var showReorderNeeded = $('#showReorderNeeded').is(':checked');
            var showExpiredStock = $('#showExpiredStock').is(':checked');
            var showAllMedicines = $('#showAllMedicines').is(':checked'); // NEW

            var filteredData = allReportData;

            // Apply search filter first
            if (searchText) {
                filteredData = filteredData.filter(function(item) {
                    return (item.medName || '').toLowerCase().includes(searchText);
                });
            }

            // MODIFIED: Default filtering - show only medicines with stock > 0 unless "Show All" is checked
            if (!showAllMedicines) {
                filteredData = filteredData.filter(function(item) {
                    return item.totalQtyInStore > 0;
                });
            }

            // Apply specific checkbox filters (when any of these are checked, they override the default filtering)
            if (showOutOfStockOnly || showReorderNeeded || showExpiredStock) {
                filteredData = filteredData.filter(function(item) {
                    var matchesFilter = false;

                    if (showOutOfStockOnly && item.totalQtyInStore === 0) {
                        matchesFilter = true;
                    }

                    if (showReorderNeeded && item.needsReorder) {
                        matchesFilter = true;
                    }

                    if (showExpiredStock && item.expiredQty > 0) {
                        matchesFilter = true;
                    }

                    return matchesFilter;
                });
            }

            currentFilteredData = filteredData;
            populateReportTable(filteredData);
            updateSearchResultCount(filteredData.length);
        }

        // MODIFIED: Updated search result count message to account for default filtering
        function updateSearchResultCount(count) {
            var searchText = $('#searchInput').val().trim();
            var showAllMedicines = $('#showAllMedicines').is(':checked');
            var hasCheckboxFilters = $('#showOutOfStockOnly').is(':checked') ||
                                     $('#showReorderNeeded').is(':checked') ||
                                     $('#showExpiredStock').is(':checked');

            var filterInfo = '';
            if (searchText || hasCheckboxFilters || !showAllMedicines) {
                filterInfo = `${count} of ${allReportData.length} medicines found`;

                var filterTypes = [];
                if (searchText) filterTypes.push('search');
                if (hasCheckboxFilters) filterTypes.push('filters');
                if (!showAllMedicines) filterTypes.push('stock > 0');

                if (filterTypes.length > 0) {
                    filterInfo += ` (${filterTypes.join(' + ')})`;
                }

                $('#searchResultCount').text(filterInfo);

                if (count === 0) {
                    $('#searchResultCount').addClass('text-warning').removeClass('text-muted text-success');
                } else {
                    $('#searchResultCount').addClass('text-success').removeClass('text-muted text-warning');
                }
            } else {
                $('#searchResultCount').text('Showing all medicines').removeClass('text-warning text-success').addClass('text-muted');
            }
        }

        // MODIFIED: Updated filter feedback to include the new "Show All" option
        function updateFilterFeedback() {
            var activeFilters = [];
            if ($('#showAllMedicines').is(':checked')) activeFilters.push('All Medicines');
            if ($('#showOutOfStockOnly').is(':checked')) activeFilters.push('Out of Stock');
            if ($('#showReorderNeeded').is(':checked')) activeFilters.push('Reorder Needed');
            if ($('#showExpiredStock').is(':checked')) activeFilters.push('Expired Stock');

            if (activeFilters.length > 0) {
                showAlert('info', `Active filters: ${activeFilters.join(', ')}`, 'Filters Applied');
            }
        }

        function clearSearch() {
            $('#searchInput').val('');
            applyFilters();
            showAlert('info', 'Search cleared', 'Filter Reset');
        }

        // MODIFIED: Clear all filters including the new "Show All" filter
        function clearAllFilters() {
            $('#searchInput').val('');
            $('#showOutOfStockOnly, #showReorderNeeded, #showExpiredStock, #showAllMedicines').prop('checked', false);
            applyFilters();
            showAlert('info', 'All filters cleared - showing stock > 0 only', 'Filters Reset');
        }

        function populateReportTable(data) {
            var tbody = $('#reportData');
            tbody.empty();
            var totalStoreQty = 0;
            var totalExpired = 0;
            var totalAvailable = 0;

            $.each(data, function(index, item) {
                // Determine row styling based on conditions
                var rowClass = '';
                var storeQtyBadgeClass = '';
                var expiredBadgeClass = '';
                var availableBadgeClass = '';

                // Check for critical conditions
                if (item.totalQtyInStore === 0) {
                    rowClass = 'row-danger'; // Out of stock
                    storeQtyBadgeClass = 'quantity-badge unavailable';
                } else if (item.needsReorder) {
                    rowClass = 'row-warning'; // Needs reorder
                    storeQtyBadgeClass = 'quantity-badge unavailable';
                } else if (item.expiredQty > 0) {
                    rowClass = 'row-warning'; // Has expired stock
                    storeQtyBadgeClass = 'quantity-badge available';
                } else {
                    storeQtyBadgeClass = 'quantity-badge available';
                }

                // Expired quantity badge styling
                if (item.expiredQty > 0) {
                    expiredBadgeClass = 'quantity-badge unavailable';
                } else {
                    expiredBadgeClass = 'quantity-badge';
                }

                // Available quantity badge styling
                if (item.availableQty === 0) {
                    availableBadgeClass = 'quantity-badge unavailable';
                } else if (item.availableQty <= item.reorderLimit) {
                    availableBadgeClass = 'quantity-badge consumed';
                } else {
                    availableBadgeClass = 'quantity-badge available';
                }

                totalStoreQty += Number(item.totalQtyInStore || 0);
                totalExpired += Number(item.expiredQty || 0);
                totalAvailable += Number(item.availableQty || 0);

                var stockStatusBadge = getStockStatusBadge(item.stockStatus);

                var row = `<tr class="inventory-table-row ${rowClass}">
                    <td class="sl-cell">${index + 1}</td>
                    <td class="medicine-cell">
                        <span class="medicine-name">${item.medName || ''}</span>

                    </td>
                    <td class="quantity-cell">
                        <span class="${storeQtyBadgeClass}">${item.totalQtyInStore || 0}</span>
                    </td>
                    <td class="quantity-cell">
                        <span class="${expiredBadgeClass}">${item.expiredQty || 0}</span>
                        ${item.expiredQty > 0 ? '<i class="bi bi-exclamation-triangle ms-1 text-danger"></i>' : ''}
                    </td>
                    <td class="quantity-cell">
                        <span class="quantity-badge received">${item.reorderLimit || 0}</span>
                    </td>
                    <td class="quantity-cell">
                        <span class="${availableBadgeClass}">${item.availableQty || 0}</span>
                    </td>
                    <td class="status-cell">
                        ${stockStatusBadge}
                    </td>
                </tr>`;
                tbody.append(row);
            });

            // Update footer totals with animation
            animateFooterValue('footerTotalStoreQty', totalStoreQty);
            animateFooterValue('footerTotalExpired', totalExpired);
            animateFooterValue('footerTotalAvailable', totalAvailable);
        }

        function getStatusIndicators(item) {
            var indicators = [];

            if (item.totalQtyInStore === 0) {
                indicators.push('<br><small class="status-indicator-inventory critical"><i class="bi bi-x-circle me-1"></i>Out of Stock</small>');
            } else if (item.needsReorder) {
                indicators.push('<br><small class="status-indicator-inventory warning"><i class="bi bi-cart-plus me-1"></i>Reorder Required</small>');
            }

            if (item.expiredQty > 0) {
                indicators.push('<br><small class="status-indicator-inventory critical"><i class="bi bi-calendar-x me-1"></i>Has Expired Stock</small>');
            }

            return indicators.join('');
        }

        function getStockStatusBadge(status) {
            switch(status) {
                case 'Out of Stock':
                    return '<span class="stock-badge-danger"><i class="bi bi-x-circle me-1"></i>Out of Stock</span>';
                case 'All Stock Expired':
                    return '<span class="stock-badge-danger"><i class="bi bi-calendar-x me-1"></i>All Expired</span>';
                case 'Critical - Low Available & Expired':
                    return '<span class="stock-badge-danger"><i class="bi bi-exclamation-triangle me-1"></i>Critical</span>';
                case 'Reorder Required':
                    return '<span class="stock-badge-warning"><i class="bi bi-cart-plus me-1"></i>Reorder</span>';
                case 'Has Expired Stock':
                    return '<span class="stock-badge-danger"><i class="bi bi-calendar-x me-1"></i>Has Expired</span>';
                case 'Low Stock':
                    return '<span class="stock-badge-warning"><i class="bi bi-arrow-down me-1"></i>Low Stock</span>';
                case 'Good Stock':
                    return '<span class="stock-badge-success"><i class="bi bi-check me-1"></i>Good</span>';
                default:
                    return '<span class="stock-badge-secondary">' + (status || 'Unknown') + '</span>';
            }
        }

        function animateFooterValue(elementId, newValue) {
            $('#' + elementId).fadeOut(150, function() {
                $(this).text(newValue.toLocaleString()).fadeIn(150);
            });
        }

        function updateReportHeader(reportInfo) {
            $('#runDateTime').text(reportInfo.generatedOn);
            $('#generatedBy').text(reportInfo.generatedBy);

            // Dynamic unit header with plant code
            var unitText = 'Unit: ITC LIMITED - PSPD-' + (reportInfo.plantCode || 'N/A');
            if (reportInfo.plantName && reportInfo.plantName !== 'Unknown Plant') {
                unitText += ' (' + reportInfo.plantName + ')';
            }
            $('#unitHeader').text(unitText);
        }

        function updateSummaryCards(reportInfo) {
            // Animate card values
            animateValue('totalRecords', 0, reportInfo.totalRecords, 1000);
            animateValue('totalQtyInStore', 0, reportInfo.totalQtyInStore, 1100);
            animateValue('totalAvailableQty', 0, reportInfo.totalAvailableQty, 1200);
            animateValue('totalExpiredQty', 0, reportInfo.totalExpiredQty, 1300);
            animateValue('medicinesNeedingReorder', 0, reportInfo.medicinesNeedingReorder, 1400);
            animateValue('medicinesOutOfStock', 0, reportInfo.medicinesOutOfStock, 1500);
        }

        function animateValue(elementId, start, end, duration) {
            const element = document.getElementById(elementId);
            const startTime = performance.now();

            function updateValue(currentTime) {
                const elapsed = currentTime - startTime;
                const progress = Math.min(elapsed / duration, 1);
                const current = Math.floor(start + (end - start) * progress);

                element.textContent = current.toLocaleString();

                if (progress < 1) {
                    requestAnimationFrame(updateValue);
                }
            }

            requestAnimationFrame(updateValue);
        }

        function updatePlantInfo(reportInfo) {
            $('#currentPlantCode').text(reportInfo.plantCode || 'N/A');
            $('#currentPlantName').text(reportInfo.plantName || 'Unknown Plant');
        }

        function exportReport() {
            showAlert('info', 'Preparing store master export file...', 'Export Started');

            window.location.href = '@Url.Action("Export", "MedicineMasterStoreReport")';
        }

        function printReport() {
            if ($('#reportTableSection').is(':visible')) {
                // Hide filter sections for printing
                $('#searchSection, #filterSection').hide();

                showAlert('info', 'Preparing print view...', 'Print Started');
                setTimeout(() => {
                    window.print();
                    // Show filter sections again after printing
                    setTimeout(() => $('#searchSection, #filterSection').show(), 1000);
                }, 500);
            } else {
                showAlert('warning', 'Please load the report first', 'Print Failed');
            }
        }

