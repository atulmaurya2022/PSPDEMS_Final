@model EMS.WebApp.Data.SysUser

@if (ViewBag.Error != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <div class="d-flex align-items-start">
            <i class="bi bi-exclamation-triangle me-3 flex-shrink-0" style="font-size: 18px;"></i>
            <div class="flex-grow-1">
                <strong class="d-block mb-1">Warning</strong>
                @ViewBag.Error
            </div>
            <button type="button" class="btn-close ms-3" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
}

<form asp-action="@(Model.user_id == 0 ? "Create" : "Edit")" method="post" id="sysUserForm">
    @Html.AntiForgeryToken()

    <input asp-for="user_id" type="hidden" />
    <input asp-for="CreatedBy" type="hidden" />
    <input asp-for="CreatedOn" type="hidden" />

    <!-- Display general validation message -->
    <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show" role="alert" style="display: none;">
        <div class="d-flex align-items-start">
            <i class="bi bi-x-circle me-3 flex-shrink-0" style="font-size: 18px;"></i>
            <div class="flex-grow-1">
                <strong class="d-block mb-1">Validation Error</strong>
                Please correct the errors below and try again.
            </div>
            <button type="button" class="btn-close ms-3" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>

    <!-- User Identification Section -->
    <div class="row mb-4">
        <div class="col-md-6">
            <label asp-for="adid" class="form-label form-label-master">
                @Html.DisplayNameFor(m => m.adid)
                <span class="text-danger">*</span>
            </label>
            <input asp-for="adid" class="form-control form-control-master" id="adidInput" maxlength="100" onkeyup="this.value = this.value.replace(/[^pPiI0-9_]/g, '')" placeholder="Enter Active Directory ID" />
            <div class="char-counter-container">
                <span asp-validation-for="adid" class="field-validation-error" id="adidValidation"></span>
                <small class="char-counter" id="adidCharCount">0/15</small>
            </div>
        </div>

        <div class="col-md-6">
            <label asp-for="full_name" class="form-label form-label-master">
                @Html.DisplayNameFor(m => m.full_name)
                <span class="text-danger">*</span>
            </label>
            <input asp-for="full_name" class="form-control form-control-master" id="fullNameInput" maxlength="80" placeholder="Enter full name" />
            <div class="char-counter-container">
                <span asp-validation-for="full_name" class="field-validation-error" id="fullNameValidation"></span>
                <small class="char-counter" id="fullNameCharCount">0/80</small>
            </div>
        </div>
    </div>

    <!-- Contact Information Section -->
    <div class="row mb-4">
        <div class="col-md-12">
            <label asp-for="email" class="form-label form-label-master">
                @Html.DisplayNameFor(m => m.email)
                <span class="text-danger">*</span>
            </label>
            <input asp-for="email" type="email" class="form-control form-control-master" id="emailInput" maxlength="120" placeholder="Enter email address" />
            <div class="char-counter-container">
                <span asp-validation-for="email" class="field-validation-error" id="emailValidation"></span>
                <small class="char-counter" id="emailCharCount">0/120</small>
            </div>
            <small class="form-text text-info">
                <i class="bi bi-info-circle"></i>
                Only @@itc.in and @@associatemail.in domains are allowed
            </small>
        </div>
    </div>

    <!-- Role and Plant Assignment Section -->
    <div class="row mb-4">
        <div class="col-md-6">
            <label asp-for="role_id" class="form-label form-label-master">
                @Html.DisplayNameFor(m => m.role_id)
                <span class="text-danger">*</span>
            </label>
            <select asp-for="role_id" class="form-control form-control-master" id="roleSelect" asp-items="ViewBag.SysRoleList">
                <option value="">-- Select Role --</option>
            </select>
            <span asp-validation-for="role_id" class="field-validation-error" id="roleValidation"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="plant_id" class="form-label form-label-master">
                @Html.DisplayNameFor(m => m.plant_id)
                <span class="text-danger">*</span>
            </label>
            <select asp-for="plant_id" class="form-control form-control-master" id="plantSelect" asp-items="ViewBag.PlantMasterList">
                <option value="">-- Select Plant --</option>
            </select>
            <span asp-validation-for="plant_id" class="field-validation-error" id="plantValidation"></span>
        </div>
    </div>

    <!-- User Status Section -->
    <div class="row mb-4">
        <div class="col-md-12">
            <label class="form-label form-label-master">
                User Status
                <span class="text-danger">*</span>
            </label>
            <div class="status-radio-group">
                <div class="form-check form-check-master">
                    <input class="form-check-input" type="radio" asp-for="is_active" value="true" id="Active">
                    <label class="form-check-label" for="Active">
                        <i class="bi bi-check-circle text-success"></i>
                        Active
                    </label>
                </div>
                <div class="form-check form-check-master">
                    <input class="form-check-input" type="radio" asp-for="is_active" value="false" id="NotActive">
                    <label class="form-check-label" for="NotActive">
                        <i class="bi bi-x-circle text-danger"></i>
                        Not Active
                    </label>
                </div>
            </div>
            <span asp-validation-for="is_active" class="field-validation-error" id="statusValidation"></span>
        </div>
    </div>

    @if (Model.user_id > 0 && (Model.CreatedOn.HasValue || Model.ModifiedOn.HasValue))
    {
        <div class="audit-section">
            <h6>
                <i class="bi bi-clock-history"></i>
                Audit Information
            </h6>

            @if (Model.CreatedOn.HasValue)
            {
                <div class="audit-row">
                    <div class="audit-field">
                        <label>Created By</label>
                        <input class="form-control" value="@(Model.CreatedBy ?? "N/A")" readonly />
                    </div>
                    <div class="audit-field">
                        <label>Created On</label>
                        <input class="form-control" value="@(Model.CreatedOn?.ToString("dd-MMM-yyyy hh:mm:ss tt") ?? "N/A")" readonly />
                    </div>
                </div>
            }

            @if (Model.ModifiedOn.HasValue)
            {
                <div class="audit-row">
                    <div class="audit-field">
                        <label>Modified By</label>
                        <input class="form-control" value="@(Model.ModifiedBy ?? "N/A")" readonly />
                    </div>
                    <div class="audit-field">
                        <label>Modified On</label>
                        <input class="form-control" value="@(Model.ModifiedOn?.ToString("dd-MMM-yyyy hh:mm:ss tt") ?? "N/A")" readonly />
                    </div>
                </div>
            }
        </div>
    }

    <div class="modal-footer modal-footer-master">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
            Cancel
        </button>
        <button type="submit" class="btn btn-primary" id="submitBtn">
            @(Model.user_id == 0 ? "Save User" : "Update User")
        </button>
    </div>
</form>

