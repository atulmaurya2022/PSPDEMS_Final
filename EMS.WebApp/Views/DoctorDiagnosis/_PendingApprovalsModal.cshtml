@using EMS.WebApp.Data
@model List<EMS.WebApp.Data.PendingApprovalViewModel>

@if (Model.Any())
{
    <!-- Bulk Actions -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <button type="button" class="btn btn-success btn-sm" id="approveAllBtn" disabled>
                <i class="bi bi-check-all"></i> Approve Selected
            </button>
            <button type="button" class="btn btn-outline-secondary btn-sm" id="selectAllBtn">
                <i class="bi bi-check-square"></i> Select All
            </button>
        </div>

    </div>

    <!-- Prescriptions Table -->
    <div class="table-responsive">
        <table class="table table-striped table-glass glass-table">
            <thead>
                <tr>
                    <th style="width: 40px;">
                        <input type="checkbox" id="selectAllCheckbox" class="form-check-input">
                    </th>
                    <th>Patient</th> @* CHANGED: From "Employee" to "Patient" *@
                    <th>Prescription Date</th>
                    <th>Diseases (ID - Name)</th>
                    <th>Medicines (ID - Name)</th>
                    <th>Vitals</th>
                    <th>Created By</th>
                    <th style="width: 140px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var prescription in Model)
                {
                    <tr data-prescription-id="@prescription.PrescriptionId">
                        <td>
                            <input type="checkbox" class="form-check-input prescription-checkbox"
                                   value="@prescription.PrescriptionId">
                        </td>
                        <td>
                            <div>
                                <strong>@GetPatientDisplayName(prescription)</strong>
                                <br><small class="text-muted">@GetPatientContext(prescription)</small>
                            </div>
                        </td>
                        <td>
                            @prescription.PrescriptionDate.ToString("dd-MMM-yyyy")
                            <br><small class="text-muted">@prescription.PrescriptionDate.ToString("HH:mm")</small>
                        </td>
                        <td>
                            @if (prescription.Diseases.Any())
                            {
                                @foreach (var disease in prescription.Diseases)
                                {
                                    <span class="badge bg-info me-1 mb-1" title="Disease ID: @disease.DiseaseId">
                                        @($"{disease.DiseaseId} - {disease.DiseaseName}")
                                    </span>
                                }
                            }
                            else
                            {
                                <span class="text-muted small">No diseases</span>
                            }
                        </td>
                        <td>
                            @if (prescription.Medicines.Any())
                            {
                                <div class="small">
                                    @foreach (var medicine in prescription.Medicines.Take(2))
                                    {
                                        <div title="Medicine ID: @medicine.MedItemId">
                                            @medicine.BaseName - @medicine.MedicineName (@medicine.Quantity)
                                        </div>
                                    }
                                    @if (prescription.Medicines.Count > 2)
                                    {
                                        <small class="text-muted">+@(prescription.Medicines.Count - 2) more medicines...</small>
                                    }
                                </div>
                            }
                            else
                            {
                                <span class="text-muted small">No medicines</span>
                            }
                        </td>
                        <td>
                            <div class="small">
                                @if (!string.IsNullOrEmpty(prescription.BloodPressure))
                                {
                                    <div><i class="bi bi-heart"></i> BP: @prescription.BloodPressure</div>
                                }
                                @if (!string.IsNullOrEmpty(prescription.Pulse))
                                {
                                    <div><i class="bi bi-activity"></i> Pulse: @prescription.Pulse</div>
                                }
                                @if (!string.IsNullOrEmpty(prescription.Temperature))
                                {
                                    <div><i class="bi bi-thermometer"></i> Temp: @prescription.Temperature</div>
                                }
                                @if (string.IsNullOrEmpty(prescription.BloodPressure) &&
                                                        string.IsNullOrEmpty(prescription.Pulse) &&
                                                        string.IsNullOrEmpty(prescription.Temperature))
                                {
                                    <span class="text-muted">No vitals recorded</span>
                                }
                            </div>
                        </td>
                        <td>
                            <span class="small">@prescription.CreatedBy</span>
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm w-100">
                                <button type="button" class="btn btn-success btn-sm approve-btn"
                                        data-prescription-id="@prescription.PrescriptionId"
                                        title="Approve this prescription">
                                    <i class="bi bi-check-circle"></i> Approve
                                </button>
                                <button type="button" class="btn btn-danger btn-sm reject-btn"
                                        data-prescription-id="@prescription.PrescriptionId"
                                        title="Reject this prescription">
                                    <i class="bi bi-x-circle"></i> Reject
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


}
else
{
    <div class="text-center py-5">
        <i class="bi bi-check-circle text-success" style="font-size: 3rem;"></i>
        <h5 class="mt-3">No Pending Approvals</h5>
        <p class="text-muted">All emergency prescriptions have been reviewed.</p>
        <hr class="my-4">
        <div class="row text-center">
            <div class="col-md-4">
                <div class="p-3">
                    <i class="bi bi-clipboard-check text-success mb-2" style="font-size: 2rem;"></i>
                    <h6>All Approved</h6>
                    <small class="text-muted">No prescriptions are waiting for approval</small>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-3">
                    <i class="bi bi-shield-check text-primary mb-2" style="font-size: 2rem;"></i>
                    <h6>System Ready</h6>
                    <small class="text-muted">Ready to process new emergency prescriptions</small>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-3">
                    <i class="bi bi-clock-history text-info mb-2" style="font-size: 2rem;"></i>
                    <h6>Quick Response</h6>
                    <small class="text-muted">Emergency prescriptions will appear here immediately</small>
                </div>
            </div>
        </div>
    </div>
}

@* Helper functions for patient display *@
@functions {
    private string GetPatientDisplayName(PendingApprovalViewModel prescription)
    {
        // Extract dependent name from remarks if available
        var dependentName = ExtractDependentFromRemarks(prescription.Remarks);

        if (!string.IsNullOrEmpty(dependentName) && dependentName != "Self")
        {
            return dependentName; // Show dependent name
        }

        return prescription.EmployeeName; // Show employee name (self)
    }

    private string GetPatientContext(PendingApprovalViewModel prescription)
    {
        var dependentName = ExtractDependentFromRemarks(prescription.Remarks);

        if (!string.IsNullOrEmpty(dependentName) && dependentName != "Self")
        {
            return $"Dependent of {prescription.EmployeeName} (ID: {prescription.EmployeeId})";
        }

        return $"Employee ID: {prescription.EmployeeId}";
    }

    private string ExtractDependentFromRemarks(string remarks)
    {
        if (string.IsNullOrEmpty(remarks))
            return "Self";

        try
        {
            // Look for pattern: "Patient: Dependent - DependentName"
            if (remarks.Contains("Patient: Dependent -", StringComparison.OrdinalIgnoreCase))
            {
                var startIndex = remarks.IndexOf("Patient: Dependent -", StringComparison.OrdinalIgnoreCase);
                if (startIndex >= 0)
                {
                    var afterPrefix = remarks.Substring(startIndex + "Patient: Dependent -".Length).Trim();

                    // Find the end of the dependent name (either semicolon or end of string)
                    var endIndex = afterPrefix.IndexOf(';');
                    if (endIndex > 0)
                    {
                        return afterPrefix.Substring(0, endIndex).Trim();
                    }
                    else
                    {
                        return afterPrefix.Trim();
                    }
                }
            }

            // Look for pattern: "Patient: Employee (Self)"
            if (remarks.Contains("Patient: Employee (Self)", StringComparison.OrdinalIgnoreCase))
            {
                return "Self";
            }

            // Default to Self if no dependent pattern found
            return "Self";
        }
        catch
        {
            return "Self";
        }
    }
}