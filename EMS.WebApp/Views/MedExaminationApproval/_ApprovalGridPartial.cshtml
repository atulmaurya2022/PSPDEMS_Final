@model EMS.WebApp.Data.MedExaminationApprovalViewModel

<div class="border p-3 rounded glass">
    <div class="table-responsive">
        <table class="table table-striped table-hover table-glass">
            <thead>
                <tr>
                    <th style="width: 50px;">
                        <input type="checkbox" id="selectAll" class="form-check-input" />
                    </th>
                    <th>Status</th>
                    <th>Employee No</th>
                    <th>Employee Name</th>
                    <th>Test Location</th>
                    <th>Last test date</th>
                    <th>Department</th>
                    <th>Category/Age</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.ApprovalItems != null && Model.ApprovalItems.Any())
                {
                    @foreach (var item in Model.ApprovalItems)
                    {
                        <tr>
                            <td>
                                <input type="checkbox" class="form-check-input approval-checkbox"
                                       value="@item.ApprovalId"
                                       data-emp-no="@item.EmployeeNo"
                                       data-emp-name="@item.EmployeeName" />
                            </td>
                            <td>
                                <span class="@item.StatusBadgeClass">@item.ApprovalStatus</span>
                                @if (!string.IsNullOrEmpty(item.ApprovedBy))
                                {
                                    <br>
                        
                                    <small class="text-muted">by @item.ApprovedBy</small>
                                }
                                @if (item.ApprovedOn.HasValue)
                                {
                                    <br>
                        
                                    <small class="text-muted">@item.ApprovedOn.Value.ToString("dd-MMM-yyyy")</small>
                                }
                            </td>
                            <td>
                                <strong>@item.EmployeeNo</strong>
                            </td>
                            <td>
                                @item.EmployeeName
                            </td>
                            <td>
                                @item.TestLocation
                            </td>
                            <td>
                                @item.LastTestDateFormatted
                            </td>
                            <td>
                                @item.Department
                            </td>
                            <td>
                                @item.CategoryAge
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="text-center text-muted py-4">
                            <i class="fas fa-inbox fa-2x mb-2"></i>
                            <br>
                            No examination records found matching the current filters.
                            <br>
                            <small>Try adjusting your filter criteria or check if there are pending examinations to approve.</small>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (Model.ApprovalItems != null && Model.ApprovalItems.Any())
    {
        <div class="mt-3 d-flex justify-content-between align-items-center">
            <div class="text-muted">
                <small>
                    Showing @Model.ApprovalItems.Count record(s)
                    @if (!string.IsNullOrEmpty(Model.SelectedApprovalStatus))
                    {
                        <span>with status: <strong>@Model.SelectedApprovalStatus</strong></span>
                    }
                </small>
            </div>

            <div class="text-muted">
                <small>
                    <span id="selectedCount">0</span> item(s) selected
                </small>
            </div>
        </div>
    }
</div>

<script>
    $(document).ready(function() {
        // Update selected count when checkboxes change
        function updateSelectedCount() {
            var selectedCount = $('.approval-checkbox:checked').length;
            $('#selectedCount').text(selectedCount);
        }

        // Update selected count on checkbox changes
        $(document).on('change', '.approval-checkbox, #selectAll', function() {
            updateSelectedCount();
        });

        // Initialize selected count
        updateSelectedCount();

        // Add tooltips for status badges
        $('[data-bs-toggle="tooltip"]').tooltip();

        // Row highlighting on hover
        $('tbody tr').hover(
            function() {
                $(this).addClass('table-active');
            },
            function() {
                $(this).removeClass('table-active');
            }
        );

        // Double-click to select/deselect row
        $('tbody tr').on('dblclick', function(e) {
            if (e.target.type !== 'checkbox') {
                var checkbox = $(this).find('.approval-checkbox');
                checkbox.prop('checked', !checkbox.prop('checked'));
                checkbox.trigger('change');
            }
        });

        // Keyboard navigation
        $(document).on('keydown', function(e) {
            // Ctrl+A to select all
            if (e.ctrlKey && e.key === 'a') {
                e.preventDefault();
                $('#selectAll').prop('checked', true).trigger('change');
            }
            // Escape to deselect all
            else if (e.key === 'Escape') {
                $('#selectAll').prop('checked', false).trigger('change');
            }
        });

        // Add context menu for rows (right-click)
        $('tbody tr').on('contextmenu', function(e) {
            e.preventDefault();
            var checkbox = $(this).find('.approval-checkbox');
            checkbox.prop('checked', !checkbox.prop('checked'));
            checkbox.trigger('change');
        });
    });
</script>

<style>
    /* Additional styles for the grid */
    .table-glass tbody tr:hover {
        background-color: rgba(13, 110, 253, 0.1);
    }

    .table-glass .approval-checkbox:checked {
        background-color: #0d6efd;
        border-color: #0d6efd;
    }

    .table-glass tbody tr.table-active {
        background-color: rgba(13, 110, 253, 0.15);
    }

    .badge {
        padding: 0.375em 0.75em;
        font-size: 0.75em;
        border-radius: 0.375rem;
    }

        .badge.bg-success {
            background-color: #198754 !important;
        }

        .badge.bg-danger {
            background-color: #dc3545 !important;
        }

        .badge.bg-warning {
            background-color: #ffc107 !important;
            color: #000;
        }

        .badge.bg-secondary {
            background-color: #6c757d !important;
        }

    /* Responsive table improvements */
    @@media (max-width: 768px) {
        .table-responsive table

    {
        font-size: 0.875rem;
    }

    .table-responsive th,
    .table-responsive td {
        padding: 0.5rem 0.25rem;
    }

    }

    /* Selection highlighting */
    .approval-checkbox:checked + td,
    .approval-checkbox:checked ~ td {
        background-color: rgba(13, 110, 253, 0.05);
    }

    /* Loading state styles */
    .loading-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(255, 255, 255, 0.8);
        backdrop-filter: blur(2px);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 1000;
    }

    .loading-spinner {
        border: 3px solid #f3f3f3;
        border-top: 3px solid #0d6efd;
        border-radius: 50%;
        width: 40px;
        height: 40px;
        animation: spin 1s linear infinite;
    }

    @@keyframes spin {
        0%

    {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(360deg);
    }

    }
</style>