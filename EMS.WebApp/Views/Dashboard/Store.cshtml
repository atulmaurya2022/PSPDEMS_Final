@section Scripts {
    <script>
        // Global utility functions
        function html(s) {
            return (s || '').toString()
                .replaceAll('&', '&amp;')
                .replaceAll('<', '&lt;')
                .replaceAll('>', '&gt;')
                .replaceAll('"', '&quot;')
                .replaceAll("'", '&#39;');
        }

        function formatDate(val) {
            if (!val) return '';
            const d = new Date(val);
            if (isNaN(d)) return '';
            return d.toLocaleDateString();
        }

        function go(e, href) {
            if (!href) return;
            const newTab = e && (e.ctrlKey || e.metaKey || e.which === 2);
            if (newTab) window.open(href, '_blank');
            else window.location.href = href;
        }

        // Enhanced Alert System
        function showAlert(type, message, title = null) {
            const alertContainer = document.getElementById('alertContainer');
            const alertId = 'alert-' + Date.now();

            const iconMap = {
                success: 'bi-check-circle',
                warning: 'bi-exclamation-triangle',
                danger: 'bi-x-circle',
                info: 'bi-info-circle'
            };

            const icon = iconMap[type] || 'bi-info-circle';
            const alertTitle = title || type.charAt(0).toUpperCase() + type.slice(1);

            const alertHtml = `
                <div id="${alertId}" class="alert alert-${type} alert-custom alert-dismissible fade show" role="alert">
                    <div class="d-flex align-items-start">
                        <i class="bi ${icon} me-3 flex-shrink-0" style="font-size: 18px;"></i>
                        <div class="flex-grow-1">
                            <strong class="d-block mb-1">${alertTitle}</strong>
                            ${message}
                        </div>
                        <button type="button" class="btn-close ms-3" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                </div>
            `;

            alertContainer.insertAdjacentHTML('afterbegin', alertHtml);

            // Auto-dismiss after 5 seconds
            setTimeout(() => {
                const alertElement = document.getElementById(alertId);
                if (alertElement) {
                    const alert = bootstrap.Alert.getOrCreateInstance(alertElement);
                    alert.close();
                }
            }, 5000);
        }

        const routes = {
            storeIndentReview: '@Url.Action("Approve", "StoreIndent")',
            storeBatchDetails: '@Url.Action("BatchDetails", "StoreIndent")',
            expiredReview: '@Url.Action("Review", "ExpiredMedicine")'
        };

        function updateKpiCard(id, value, category) {
            const kpiElement = document.getElementById(id);
            kpiElement.innerHTML = value === '—' ? '<div class="loading-spinner"></div>' : value;
        }

        function showLoadingError(tableId, colSpan, message) {
            document.getElementById(tableId).innerHTML =
                `<tr><td colspan="${colSpan}" class="text-danger text-center py-4">
                    <i class="bi bi-exclamation-triangle me-2"></i>${message}
                </td></tr>`;
        }

         function hideModal(modalid) {
                const viewmodalEl = $('#'+modalid);
                if (!viewmodalEl) return;
                viewmodalEl.appendTo('body');
                viewmodalEl.modal({ backdrop: 'static', keyboard: false, show: false });
                viewmodalEl.modal('hide');
            }

             // View Modal
                window.loadViewData = function (id,modalid) {

                     var modalEl = $('#modalStoreIndent');
                modalEl.appendTo('body');
                modalEl.modal({ backdrop: 'static', keyboard: false, show: false });

                        var detailsUrl = '@Url.Action("Details", "StoreIndent")' + '/' + id;

                        $.get(detailsUrl)
                        .done(html => {
                            modalEl.find('.modal-title').text('View Store Indent');
                            $('#modalBody').html(html);
                            modalEl.modal('show');

                            hideModal(modalid);
                        })
                        .fail(function(xhr, status, error) {
                            console.error('View request failed:', status, error);
                            showMessage('Failed to load details. Please try again.', 'error');
                        });
                };

                


        (function () {
            const $nearSel = $('#near-days'), $nearLbl = $('#near-label');

