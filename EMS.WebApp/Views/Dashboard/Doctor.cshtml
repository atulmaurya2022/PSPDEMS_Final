                        rows.forEach(r => {
                            const href = routes.batchDetails + r.batchId;
                            const tr = `<tr title="Open batch ${html(r.batchNo)}">
                                <td>${html(r.medicineName)}</td>
                                <td>${html(r.batchNo)}</td>
                                <td>${formatDate(r.expiryDate)}</td>
                                <td>${r.availableStock}</td>
                                <td>${html(r.vendorCode || '')}</td>
