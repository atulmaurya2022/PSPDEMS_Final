@section Scripts {
    <script>
        // Global utility functions - moved to global scope
        function html(s) {
            return (s || '').toString()
                .replaceAll('&', '&amp;')
                .replaceAll('<', '&lt;')
                .replaceAll('>', '&gt;')
                .replaceAll('"', '&quot;')
                .replaceAll("'", '&#39;');
        }

        function formatDate(val) {
            if (!val) return '';
            const d = new Date(val);
            if (isNaN(d)) return '';
            return d.toLocaleDateString();
        }

        function go(e, href) {
            if (!href) return;
            const newTab = e && (e.ctrlKey || e.metaKey || e.which === 2);
            if (newTab) window.open(href, '_blank');
            else window.location.href = href;
        }

        // Enhanced Alert System
        function showAlert(type, message, title = null) {
            const alertContainer = document.getElementById('alertContainer');
            const alertId = 'alert-' + Date.now();

            const iconMap = {
                success: 'bi-check-circle',
                warning: 'bi-exclamation-triangle',
                danger: 'bi-x-circle',
                info: 'bi-info-circle'
            };

            const icon = iconMap[type] || 'bi-info-circle';
            const alertTitle = title || type.charAt(0).toUpperCase() + type.slice(1);

            const alertHtml = `
                <div id="${alertId}" class="alert alert-${type} alert-custom alert-dismissible fade show" role="alert">
                    <div class="d-flex align-items-start">
                        <i class="bi ${icon} me-3 flex-shrink-0" style="font-size: 18px;"></i>
                        <div class="flex-grow-1">
                            <strong class="d-block mb-1">${alertTitle}</strong>
                            ${message}
                        </div>
                        <button type="button" class="btn-close ms-3" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                </div>
            `;

            alertContainer.insertAdjacentHTML('afterbegin', alertHtml);

            // Auto-dismiss after 5 seconds
            setTimeout(() => {
                const alertElement = document.getElementById(alertId);
                if (alertElement) {
                    const alert = bootstrap.Alert.getOrCreateInstance(alertElement);
                    alert.close();
                }
            }, 5000);
        }

        const routes = {
            storeIndentReview: '@Url.Action("Approve", "StoreIndent")',
            compounderIndentReview: '@Url.Action("Approve", "CompounderIndent")',
            prescriptionReview:'@Url.Action("Approve", "DoctorDiagnosis")' ,
            batchDetails: '@Url.Action("BatchDetails", "CompounderIndent")',
            expiredReview:'@Url.Action("Review", "ExpiredMedicine")' 
        };

        function updateKpiCard(id, value, category) {
            const kpiElement = document.getElementById(id);
            const card = kpiElement.closest('.kpi-card');

            kpiElement.innerHTML = value === '—' ?
                '<div class="loading-spinner"></div>' :
                value;

            // Add category-specific styling
            if (value !== '—' && value > 0) {
                if (category === 'expired') {
                    card.classList.add('danger');
                } else if (category === 'near-expiry' && value > 10) {
                    card.classList.add('warning');
                } else if (value === 0) {
                    card.classList.add('success');
                }
            }
        }

        (function() {
            const $nearDays = $('#near-days');
            const $nearDaysLabel = $('#near-days-label');

            function loadSummary() {
                const days = parseInt($nearDays.val(), 10) || 30;
                $nearDaysLabel.text(days);

                $.getJSON('@Url.Action("GetDoctorSummary", "Dashboard")', { nearDays: days })
                    .done(function (data) {
                        updateKpiCard('kpi-store-pending', data.pendingStoreIndentApprovals, 'store');
                        updateKpiCard('kpi-compounder-pending', data.pendingCompounderIndentApprovals, 'compounder');
                        updateKpiCard('kpi-prescription-pending', data.pendingPrescriptionApprovals, 'prescription');
                        updateKpiCard('kpi-expired', data.expiredMedicinesPendingDisposal, 'expired');
                        updateKpiCard('kpi-near-expiry', data.nearExpiryMedicineCount, 'near-expiry');
                    })
                    .fail(function (xhr) {
                        console.error('Summary load failed', xhr);
                        showAlert('danger', 'Failed to load dashboard summary. Please refresh the page.', 'Loading Error');
                    });

                $.getJSON('@Url.Action("GetNearExpiry", "Dashboard")', { days: days })
                    .done(function (rows) {
                        const $tb = $('#tbl-near-expiry tbody').empty();
                        if (!rows || rows.length === 0) {
                            $tb.append('<tr><td colspan="5" class="text-muted">No records.</td></tr>');
                            return;
