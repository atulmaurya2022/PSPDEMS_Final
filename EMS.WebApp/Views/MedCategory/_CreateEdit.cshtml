@model EMS.WebApp.Data.MedCategory

@if (ViewBag.Error != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <div class="d-flex align-items-start">
            <i class="bi bi-exclamation-triangle me-3 flex-shrink-0" style="font-size: 18px;"></i>
            <div class="flex-grow-1">
                <strong class="d-block mb-1">Warning</strong>
                @ViewBag.Error
            </div>
            <button type="button" class="btn-close ms-3" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
}

<form asp-action="@(Model.MedCatId==0? "Create":"Edit")" method="post" id="medCategoryForm">
    @Html.AntiForgeryToken()

    <input asp-for="MedCatId" type="hidden" />
    <input asp-for="CreatedBy" type="hidden" />
    <input asp-for="CreatedOn" type="hidden" />
    <input type="hidden" id="checkUrlHidden" value="@Url.Action("CheckCategoryNameExists", "MedCategory")" />

    <!-- Display general validation message -->
    <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show" role="alert" style="display: none;">
        <div class="d-flex align-items-start">
            <i class="bi bi-x-circle me-3 flex-shrink-0" style="font-size: 18px;"></i>
            <div class="flex-grow-1">
                <strong class="d-block mb-1">Validation Error</strong>
                Please correct the errors below and try again.
            </div>
            <button type="button" class="btn-close ms-3" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>

    <!-- Category Name Row -->
    <div class="row mb-4">
        <div class="col-md-12">
            <label asp-for="MedCatName" class="form-label form-label-master">
                <i class="bi bi-tag-fill"></i>
                Category Name <span class="text-danger">*</span>
            </label>
            <input asp-for="MedCatName" class="form-control form-control-master" id="medCatNameInput" maxlength="80" placeholder="Enter medical category name" />
            <div class="char-counter-container">
                <span asp-validation-for="MedCatName" class="field-validation-error" id="medCatNameValidation"></span>
                <small class="char-counter" id="medCatNameCharCount">0/80</small>
            </div>
        </div>
    </div>

    <!-- Description Row -->
    <div class="row mb-4">
        <div class="col-md-12">
            <label asp-for="Description" class="form-label form-label-master">
                <i class="bi bi-card-text"></i>
                Description
            </label>
            <textarea asp-for="Description" class="form-control form-control-master" rows="3" id="descTextarea" maxlength="250" placeholder="Enter category description (optional)"></textarea>
            <div class="char-counter-container">
                <span asp-validation-for="Description" class="field-validation-error" id="descValidation"></span>
                <small class="char-counter" id="descCharCount">0/250</small>
            </div>
        </div>
    </div>

    <!-- Remarks Row -->
    <div class="row mb-4">
        <div class="col-md-12">
            <label asp-for="Remarks" class="form-label form-label-master">
                <i class="bi bi-chat-square-text"></i>
                Remarks
            </label>
            <textarea asp-for="Remarks" class="form-control form-control-master" rows="3" id="remarksTextarea" maxlength="250" placeholder="Enter remarks (optional)"></textarea>
            <div class="char-counter-container">
                <span asp-validation-for="Remarks" class="field-validation-error" id="remarksValidation"></span>
                <small class="char-counter" id="remarksCharCount">0/250</small>
            </div>
        </div>
    </div>

    @if (Model.MedCatId > 0 && (Model.CreatedOn.HasValue || Model.ModifiedOn.HasValue))
    {
        <div class="audit-section">
            <h6>
                <i class="bi bi-clock-history"></i>
                Audit Information
            </h6>

            @if (Model.CreatedOn.HasValue)
            {
                <div class="audit-row">
                    <div class="audit-field">
                        <label>Created By</label>
                        <input class="form-control" value="@(Model.CreatedBy ?? "N/A")" readonly />
                    </div>
                    <div class="audit-field">
                        <label>Created On</label>
                        <input class="form-control" value="@(Model.CreatedOn?.ToString("dd-MMM-yyyy hh:mm:ss tt") ?? "N/A")" readonly />
                    </div>
                </div>
            }

            @if (Model.ModifiedOn.HasValue)
            {
                <div class="audit-row">
                    <div class="audit-field">
                        <label>Modified By</label>
                        <input class="form-control" value="@(Model.ModifiedBy ?? "N/A")" readonly />
                    </div>
                    <div class="audit-field">
                        <label>Modified On</label>
                        <input class="form-control" value="@(Model.ModifiedOn?.ToString("dd-MMM-yyyy hh:mm:ss tt") ?? "N/A")" readonly />
                    </div>
                </div>
            }
        </div>
    }

    <div class="modal-footer modal-footer-master">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
            Cancel
        </button>
        <button type="submit" class="btn btn-primary" id="submitBtn">
            @(Model.MedCatId == 0 ? "Save Category" : "Update Category")
        </button>
    </div>
</form>

