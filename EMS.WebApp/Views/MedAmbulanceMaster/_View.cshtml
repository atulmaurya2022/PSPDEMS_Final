@model EMS.WebApp.Data.MedAmbulanceMaster

<!-- Medical Ambulance Information Display -->
<div class="row mb-4">
    <div class="col-md-4">
        <label class="form-label form-label-master">
            <i class="bi bi-hash"></i>
            Ambulance ID
        </label>
        <div class="form-control form-control-master" style="background: var(--bg-secondary); border-style: dashed;">
            <strong class="text-primary">@Model.amb_id</strong>
        </div>
    </div>
    <div class="col-md-4">
        <label class="form-label form-label-master">
            <i class="bi bi-truck"></i>
            Vehicle Number
        </label>
        <div class="form-control form-control-master" style="background: var(--bg-secondary); border-style: dashed;">
            <span class="badge bg-primary" style="font-size: 12px;">@Model.vehicle_no</span>
        </div>
    </div>
    <div class="col-md-4">
        <label class="form-label form-label-master">
            <i class="bi bi-building"></i>
            Provider
        </label>
        <div class="form-control form-control-master" style="background: var(--bg-secondary); border-style: dashed;">
            <strong>@Model.provider</strong>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-6">
        <label class="form-label form-label-master">
            <i class="bi bi-tag"></i>
            Vehicle Type
        </label>
        <div class="form-control form-control-master" style="background: var(--bg-secondary); border-style: dashed;">
            @if (!string.IsNullOrEmpty(Model.vehicle_type))
            {
                <span class="badge bg-info">@Model.vehicle_type</span>
            }
            else
            {
                <em class="text-muted">Not specified</em>
            }
        </div>
    </div>
    <div class="col-md-6">
        <label class="form-label form-label-master">
            <i class="bi bi-people"></i>
            Maximum Capacity
        </label>
        <div class="form-control form-control-master" style="background: var(--bg-secondary); border-style: dashed;">
            @{
                string capacityBadgeClass = Model.max_capacity >= 10 ? "bg-success" :
                Model.max_capacity >= 5 ? "bg-warning" : "bg-secondary";
            }
            <span class="badge @capacityBadgeClass">
                <i class="bi bi-people"></i> @Model.max_capacity people
            </span>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-6">
        <label class="form-label form-label-master">
            <i class="bi bi-toggle2-on"></i>
            Active Status
        </label>
        <div class="form-control form-control-master" style="background: var(--bg-secondary); border-style: dashed;">
            @{
                bool isActive = Model.is_active == true;
                string statusBadgeClass = isActive ? "bg-success" : "bg-warning";
                string statusIcon = isActive ? "bi-check-circle" : "bi-pause-circle";
                string statusText = isActive ? "Active" : "Inactive";
            }
            <span class="badge @statusBadgeClass">
                <i class="bi @statusIcon"></i> @statusText
            </span>
        </div>
    </div>
</div>

@if (Model.CreatedOn.HasValue || Model.ModifiedOn.HasValue)
{
    <div class="audit-section">
        <h6>
            <i class="bi bi-clock-history"></i>
            Audit Information
        </h6>

        @if (Model.CreatedOn.HasValue)
        {
            <div class="audit-row">
                <div class="audit-field">
                    <label>Created By</label>
                    <div class="form-control">
                        <strong>@(Model.CreatedBy ?? "N/A")</strong>
                    </div>
                </div>
                <div class="audit-field">
                    <label>Created On</label>
                    <div class="form-control">
                        <strong>@(Model.CreatedOn?.ToString("dd-MMM-yyyy hh:mm:ss tt") ?? "N/A")</strong>
                    </div>
                </div>
            </div>
        }

        @if (Model.ModifiedOn.HasValue)
        {
            <div class="audit-row">
                <div class="audit-field">
                    <label>Modified By</label>
                    <div class="form-control">
                        <strong>@(Model.ModifiedBy ?? "N/A")</strong>
                    </div>
                </div>
                <div class="audit-field">
                    <label>Modified On</label>
                    <div class="form-control">
                        <strong>@(Model.ModifiedOn?.ToString("dd-MMM-yyyy hh:mm:ss tt") ?? "N/A")</strong>
                    </div>
                </div>
            </div>
        }
    </div>
}

<div class="modal-footer modal-footer-master">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
        Close
    </button>
</div>