@model EMS.WebApp.Data.SysScreenName

@if (ViewBag.Error != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <div class="d-flex align-items-start">
            <i class="bi bi-exclamation-triangle me-3 flex-shrink-0" style="font-size: 18px;"></i>
            <div class="flex-grow-1">
                <strong class="d-block mb-1">Warning</strong>
                @ViewBag.Error
            </div>
            <button type="button" class="btn-close ms-3" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
}

<form asp-action="@(Model.screen_uid == 0 ? "Create" : "Edit")" method="post" id="SysScreenForm">
    @Html.AntiForgeryToken()
    <input asp-for="screen_uid" type="hidden" />
    <input asp-for="CreatedBy" type="hidden" />
    <input asp-for="CreatedOn" type="hidden" />

    <!-- Display general validation message -->
    <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show" role="alert" style="display: none;">
        <div class="d-flex align-items-start">
            <i class="bi bi-x-circle me-3 flex-shrink-0" style="font-size: 18px;"></i>
            <div class="flex-grow-1">
                <strong class="d-block mb-1">Validation Error</strong>
                Please correct the errors below and try again.
            </div>
            <button type="button" class="btn-close ms-3" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>

    <!-- Screen Name Row -->
    <div class="row mb-4">
        <div class="col-md-12">
            <label asp-for="screen_name" class="form-label form-label-master">
                <i class="bi bi-window"></i>
                Screen Name <span class="text-danger">*</span>
            </label>
            <input asp-for="screen_name" class="form-control form-control-master" id="screenNameInput" maxlength="40" placeholder="Enter screen name (e.g., MedBase, MedMaster)" style="font-family: monospace;" />
            <div class="char-counter-container">
                <span asp-validation-for="screen_name" class="field-validation-error" id="screenNameValidation"></span>
                <small class="char-counter" id="screenNameCharCount">0/40</small>
            </div>
        </div>
    </div>

    <!-- Available Controllers Row -->
    <div class="row mb-4">
        <div class="col-md-12">
            <label class="form-label form-label-master">
                <i class="bi bi-code-square"></i>
                Available Controllers
            </label>
            <div id="availableControllers" class="mt-2 p-3 border rounded-3" style="background: var(--bg-light); min-height: 60px;">
                <div class="d-flex align-items-center justify-content-center">
                    <div class="loading-spinner-master me-2"></div>
                    <span class="text-muted">Loading controllers...</span>
                </div>
            </div>
            <small class="text-info mt-1 d-block">
                <i class="bi bi-info-circle"></i> Click on a controller name above to auto-fill the screen name
            </small>
        </div>
    </div>

    <!-- Description Row -->
    <div class="row mb-4">
        <div class="col-md-12">
            <label asp-for="screen_description" class="form-label form-label-master">
                <i class="bi bi-card-text"></i>
                Description
            </label>
            <textarea asp-for="screen_description" class="form-control form-control-master" rows="4" id="screenDescTextarea" maxlength="250" placeholder="Enter screen description (optional)"></textarea>
            <div class="char-counter-container">
                <span asp-validation-for="screen_description" class="field-validation-error" id="screenDescValidation"></span>
                <small class="char-counter" id="charCount">0/250</small>
            </div>
        </div>
    </div>

    @if (Model.screen_uid > 0 && (Model.CreatedOn.HasValue || Model.ModifiedOn.HasValue))
    {
        <div class="audit-section">
            <h6>
                <i class="bi bi-clock-history"></i>
                Audit Information
            </h6>

            @if (Model.CreatedOn.HasValue)
            {
                <div class="audit-row">
                    <div class="audit-field">
                        <label>Created By</label>
                        <input class="form-control" value="@(Model.CreatedBy ?? "N/A")" readonly />
                    </div>
                    <div class="audit-field">
                        <label>Created On</label>
                        <input class="form-control" value="@(Model.CreatedOn?.ToString("dd-MMM-yyyy hh:mm:ss tt") ?? "N/A")" readonly />
                    </div>
                </div>
            }

            @if (Model.ModifiedOn.HasValue)
            {
                <div class="audit-row">
                    <div class="audit-field">
                        <label>Modified By</label>
                        <input class="form-control" value="@(Model.ModifiedBy ?? "N/A")" readonly />
                    </div>
                    <div class="audit-field">
                        <label>Modified On</label>
                        <input class="form-control" value="@(Model.ModifiedOn?.ToString("dd-MMM-yyyy hh:mm:ss tt") ?? "N/A")" readonly />
                    </div>
                </div>
            }
        </div>
    }

    <div class="modal-footer modal-footer-master">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
            Cancel
        </button>
        <button type="submit" class="btn btn-primary" id="submitBtn">
            @(Model.screen_uid == 0 ? "Save Screen" : "Update Screen")
        </button>
    </div>
</form>

