@model EMS.WebApp.Data.MedDisease

@if (ViewBag.Error != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <div class="d-flex align-items-start">
            <i class="bi bi-exclamation-triangle me-3 flex-shrink-0" style="font-size: 18px;"></i>
            <div class="flex-grow-1">
                <strong class="d-block mb-1">Warning</strong>
                @ViewBag.Error
            </div>
            <button type="button" class="btn-close ms-3" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
}

<form asp-action="@(Model.DiseaseId == 0 ? "Create" : "Edit")" method="post" id="medDiseaseForm">
    @Html.AntiForgeryToken()

    <input asp-for="DiseaseId" type="hidden" />
    <input asp-for="CreatedBy" type="hidden" />
    <input asp-for="CreatedOn" type="hidden" />
    <input type="hidden" id="checkUrlHidden" value="@Url.Action("CheckDiseaseNameExists", "MedDisease")" />

    <!-- Display general validation message -->
    <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show" role="alert" style="display: none;">
        <div class="d-flex align-items-start">
            <i class="bi bi-x-circle me-3 flex-shrink-0" style="font-size: 18px;"></i>
            <div class="flex-grow-1">
                <strong class="d-block mb-1">Validation Error</strong>
                Please correct the errors below and try again.
            </div>
            <button type="button" class="btn-close ms-3" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>

    <!-- Disease Name Row -->
    <div class="row mb-4">
        <div class="col-md-12">
            <label asp-for="DiseaseName" class="form-label form-label-master">
                Disease Name <span class="text-danger">*</span>
            </label>
            <input asp-for="DiseaseName" class="form-control form-control-master" id="diseaseNameInput" maxlength="120" placeholder="Enter disease name" />
            <div class="char-counter-container">
                <span asp-validation-for="DiseaseName" class="field-validation-error" id="diseaseNameValidation"></span>
                <small class="char-counter" id="diseaseNameCharCount">0/120</small>
            </div>
        </div>
    </div>

    <!-- Description Row -->
    <div class="row mb-4">
        <div class="col-md-12">
            <label asp-for="DiseaseDesc" class="form-label form-label-master">
                Description
            </label>
            <textarea asp-for="DiseaseDesc" class="form-control form-control-master" rows="4" id="diseaseDescTextarea" maxlength="250" placeholder="Enter disease description (optional)"></textarea>
            <div class="char-counter-container">
                <span asp-validation-for="DiseaseDesc" class="field-validation-error" id="diseaseDescValidation"></span>
                <small class="char-counter" id="descCharCount">0/250</small>
            </div>
        </div>
    </div>

    @if (Model.DiseaseId > 0 && (Model.CreatedOn.HasValue || Model.ModifiedOn.HasValue))
    {
        <div class="audit-section">
            <h6>
                Audit Information
            </h6>

            @if (Model.CreatedOn.HasValue)
            {
                <div class="audit-row">
                    <div class="audit-field">
                        <label>Created By</label>
                        <input class="form-control" value="@(Model.CreatedBy ?? "N/A")" readonly />
                    </div>
                    <div class="audit-field">
                        <label>Created On</label>
                        <input class="form-control" value="@(Model.CreatedOn?.ToString("dd-MMM-yyyy hh:mm:ss tt") ?? "N/A")" readonly />
                    </div>
                </div>
            }

            @if (Model.ModifiedOn.HasValue)
            {
                <div class="audit-row">
                    <div class="audit-field">
                        <label>Modified By</label>
                        <input class="form-control" value="@(Model.ModifiedBy ?? "N/A")" readonly />
                    </div>
                    <div class="audit-field">
                        <label>Modified On</label>
                        <input class="form-control" value="@(Model.ModifiedOn?.ToString("dd-MMM-yyyy hh:mm:ss tt") ?? "N/A")" readonly />
                    </div>
                </div>
            }
        </div>
    }

    <div class="modal-footer modal-footer-master">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
            Cancel
        </button>
        <button type="submit" class="btn btn-primary" id="submitBtn">
            @(Model.DiseaseId == 0 ? "Save Disease" : "Update Disease")
        </button>
    </div>
</form>

